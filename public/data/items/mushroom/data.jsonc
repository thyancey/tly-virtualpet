{
  "id": "mushroom",
  "type": "8bit",
  "name": "Standard Mushroom",
  "thumbnail": "thumbnail.jpg",
  "behaviors": {
    "DEFAULT": { "animations": [ "Flashing" ] },
    "IDLE": { "animations": [ "Regular" ] },
    "EXPIRED": { "animations": [ "Expired" ] }
  },  
  "statEvents":[
    {
      "id":"E_POWER_UP",
      "label": "Power up!",
      "statEffects":[
        { "id":"power", "immediate":1 }
      ],
      "type":"event",
      "cooldown": 100
    }
  ],
  "sprites":{
    "i_mushroom_default":{
      "data": "default.json",
      "image": "default.png",
      "scale": 4.0,
      "frameDims": [ 16, 16 ],
      "frameSqueeze": { "x": 0, "y": 0, "w": 0, "h": 0 },
      "faceDirection": true,
      "orientation": 1,
      "defaults":{
        "animation":{
          "frameRate": 5,
          "repeat": -1
        },
        "frameObj":{
          "prefix": "anim",
          "zeroPad": 4
        }
      }
    }
  },
  "animations":{
    "Regular":{
      "sprite": "i_mushroom_default",
      "frameObj":{
        "frames": [0]
      }
    },
    "Flashing":{
      "sprite": "i_mushroom_default",
      "frameObj":{
        "frames": [0, 1]
      }
    },
    "Expired":{
      "sprite": "i_mushroom_default",
      "frameObj":{
        "frames": [2]
      }
    }
  }
}