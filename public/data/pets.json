            "value": "300",
            "perSecond": "0",
            "max": "500"
          },
          { 
            "id":"meatyness",
            "label":"MEATYNESS",
            "value": "50",
            "perSecond": "-1",
            "max": "100",
            "fullIsGood": true,
            "doesKill": true
          }
        ]
      },
      "graphics":{
