{
  "pets": [
    {
      "id": "hotdoug",
      "type": "magnadoodle",
      "animal": "Hot Dog",
      "name": "Hot Doug",
      "scene": "magnadoodle",
      "statuses": {
        "DEFAULT": { "animations": [ "hd_idle" ] },
        "IDLE": { "animations": [ "hd_idle" ] },
        "EAT": { "animations": [ "hd_eat" ] },
        "WALK": { "animations": [ "hd_walk" ] },
        "LIL_IDLE": { "animations": [ "hd_lil_idle" ] },
        "LIL_WALK": { "animations": [ "hd_lil_walk" ] },
        "LIL_EMERGE": { "animations": [ "hd_lil_emerge" ] },
        "DEAD": { "animations": [ "hd_dead" ] }
      },
      "moodSwings":[
        {
          "when":[
            { "type":"status", "isDead": true }
          ],
          "then": "DEAD"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": "<_20%" },
            { "type": "activity", "activity": "EATING" }
          ],
          "then": "EAT"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": "<_20%" },
            { "type": "activity", "activity": "WALKING" }
          ],
          "then": "LIL_WALK"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": "<_20%" }
          ],
          "then": "LIL_IDLE"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": ">=_20%" },
            { "type":"stat", "stat":"meatyness", "value": "<_40%" }
          ],
          "then": "LIL_EMERGE"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": ">=_40%" },
            { "type": "activity", "activity": "EATING" }
          ],
          "then": "EAT"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": ">=_40%" },
            { "type": "activity", "activity": "WALKING" }
          ],
          "then": "WALK"
        },
        {
          "when":[
            { "type":"stat", "stat":"meatyness", "value": ">=_40%" }
          ],
          "then": "IDLE"
        }
      ],
      "stats_initial":{
        "timestamp": null,
        "stats": [
